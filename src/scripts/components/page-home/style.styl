.page-home {
    height 100vh
    background-color $yellow
    img {
        width 60%
        margin-bottom 2vh
    }
    &__wrapper {
        margin 0 auto

        opacity 0
        will-change transform, opacity

        transform scale(0.75)

        &.is-active {
            opacity 1

            transform scale(1)
            transition opacity 0.8s $ease-out-quart, transform 0.6s $ease-out-quart
        }
    }
    &__headline {
        font-family 'SharpGrotesk-Light10'
        font-size 42px
        letter-spacing 5px
    }

    &__intro {
        z-index 4
        opacity 1
        transition opacity 0.6s $ease-out-expo 0.3s

        &.is-hidden {
            opacity 0
            // visibility hidden
        }

        &__video-elem {
            position absolute
        }
    }

    &__overlay {
        z-index 5

        opacity 1
        background-color transparentify($red, 0.9)
        transition opacity 0.6s $ease-out-expo 0.3s

        &.is-hidden {
            opacity 0
        }

        &-inner {
            opacity 0

            will-change transform, opacity

            transform scale(0.75)
            transition opacity 0.4s $ease-out-quart, transform 0.4s $ease-out-quart


            &.is-active {
                opacity 1
                transform scale(1)
            }
        }


        &-description {
            font-family 'SharpGrotesk-Medium20'
            padding 40px 0
        }

        &-button {
            font-size 14px
            border solid 3px $white
            padding 10px 20px
            font-family 'SharpGrotesk-Bold20'
            background-color transparent
            color $white
            transition background-color 0.8s $ease-out-expo, color 0.4s $ease-out-expo

            &:hover {
                background-color transparentify($white, 0.9)
                color $red
            }
        }
    }
}
