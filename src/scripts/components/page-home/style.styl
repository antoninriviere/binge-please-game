.page-home {
    height 100vh
    background-color $yellow

    .app-logo {
        height 30%
    }
    &__wrapper {
        width 50%

        margin 0 auto

        opacity 0
        will-change transform, opacity

        transform scale(0.75)

        &.is-active {
            opacity 1

            transform scale(1)
            transition opacity 0.8s $ease-out-quart, transform 0.6s $ease-out-quart
        }
    }
    &__description {
        font-family 'SharpGrotesk-Medium20'
        font-size 18px
        line-height 32px
        letter-spacing 1px
    }
    &__button {
        margin-top 5vh
        text-transform uppercase
        padding 3vh 8vw
        border solid 1px $white
    }

    &__intro {
        z-index 4

        &.is-hidden {
            opacity 0
            visibility hidden
        }

        &__video-elem {
            position fixed
            top 50%
            left 50%
            height 100vh
            // z-index -100
            transform translateX(-50%) translateY(-50%) scale(1.1)
        }
    }
}
