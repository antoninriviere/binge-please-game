.animation {
    &__part {
        position absolute
        top 50%
        transform translateY(-50%)

        &--left {
            right 50%
            padding-right 10px
            text-align right
        }
        &--right {
            left 50%
            padding-left 10px
            text-align left
        }
    }
    &__text {
        font-family 'SharpGrotesk-Light10'
        letter-spacing 1px
        font-size 50vh
        line-height 1
        color $white

        &--left {
            clip-path polygon(100% 0, 100% 0, 100% 100%, 100% 100%)
        }
        &--right {
            clip-path: polygon(0 0, 0% 0, 0% 100%, 0 100%);
        }
    }
    &__mask {
        width 100%
        height 85%

        position absolute
        top 0

        transform scaleX(0)
        background-color $white
        &--left {
            right 0
            transform-origin 100% 50%
        }
        &--right {
            left 0
            transform-origin 0% 50%
        }
    }
}
