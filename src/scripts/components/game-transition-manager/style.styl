.game-transition-manager {
    z-index -1
    opacity 0

    &.is-active {
        z-index 10
        opacity 1
    }

    &__popin {
        opacity 0
    }

    &__title {
        font-family 'SharpGrotesk-Bold20'
        font-size 2rem
        margin-bottom 1rem

        span {
            transform translateY(100%)
        }
    }

    &__info {
        font-family 'SharpGrotesk-Bold20'
        font-size 1rem
        opacity 0
    }

    &__answer {
        font-family 'SharpGrotesk-Bold10'
        letter-spacing 0.8vw
        font-size 20vh
        line-height 1
    }

    &__success {
        opacity 0
    }

    &__points {
        position absolute
        top 20%
        left 10%
        z-index 2

        opacity 0
        transform scale(0) rotate(-8deg)

        color $white
        font-family 'SharpGrotesk-SemiBold25'
        font-size 60px
    }
}
