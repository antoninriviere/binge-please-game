.game-transition-manager {
    z-index -1
    // z-index 5
    transition transform 0.3s $ease-out-sine
    will-change transform

    circle {
        transform-origin 50% 50%
    }

    &.is-active {
        z-index 5
    }

    &__popin {
        opacity 0
    }

    &__title {
        font-family 'SharpGrotesk-Bold20'
        font-size 2rem
        margin-bottom 1rem

        span {
            transform translateY(100%)
        }
    }

    &__info {
        font-family 'SharpGrotesk-Bold20'
        font-size 1rem
        opacity 0
    }

    &__answer {
        font-family 'SharpGrotesk-Bold10'
        letter-spacing 0.8vw
        font-size 20vh
        line-height 1
    }
}
