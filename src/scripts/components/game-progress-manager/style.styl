.game-progress-manager {
    margin-top 15px

    &__dots {
        width 18vw
        min-width 200px
        max-width 300px

        height 5vh
        border 3px solid $white

        display flex
        justify-content center
        align-items center

        &__wrapper {
            display flex
            position relative
        }
    }

    &__dot {
        background-color $white
        height 5px
        width 5px
        border-radius 50%
        display inline-block
        margin-right 10px

        &:last-child {
            margin-right 0
        }

        &--progress {
            background-color $white
            width 1px
            height 5px

            position absolute
            left 2.5px

            transform-origin 0
            transform scaleX(0)

            will-change transform

        }

        &--progress-corner {
            background-color $white
            height 5px
            width 5px

            border-radius 50%

            position absolute
            left 0

            transform-origin 0
            transform translateX(0px)

            will-change transform
        }
    }

}
