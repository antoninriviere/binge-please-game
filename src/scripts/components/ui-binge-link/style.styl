.binge-link {
    font-family 'SharpGrotesk-SemiBold25'
    text-transform uppercase
    font-size 15px

    padding 15px 25px
    border 3px solid $black
    display inline-block

    margin-top 30px
    outline none

    span {
        position relative
        top -1px
    }

    svg {
        height 20px
        transform translateY(20%)
        margin-left 5px
    }
}
