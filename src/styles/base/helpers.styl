.overflow-h {
    overflow hidden
}

.display-inline-block {
    display inline-block
}

.pos-abs {
    position absolute
}

.pos-rel {
    position relative
}

.pos-f-tl {
    position fixed
    top 0
    left 0
}

.pos-abs-tl {
    position absolute
    top 0
    left 0
}

.fit {
    width 100%
    height 100%
}

.fit-w {
    width 100%
}

.pos-center {
    position absolute

    top 50%
    left 50%

    transform translate3d(-50%, -50%, 0)
}

.center-flex {
    display flex
    flex-flow column nowrap
    justify-content center
    align-items center
}

.color--white {
    color $white
}

.color--black {
    color $black
}

.color--yellow {
    color $yellow
}

.btn {
    cursor pointer
}
.uppercase {
    text-transform uppercase
}
.text-center {
    text-align center
}
.text-left {
    text-align left
}
.text-right {
    text-align right
}
.text-infos {
    font-size 20px
    line-height 25px
    letter-spacing 0.86px
}
