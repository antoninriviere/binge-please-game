.overflow-h {
    overflow hidden
}

.display-inline-block {
    display inline-block
}

.pos-f-tl {
    position fixed
    top 0
    left 0
}

.pos-abs-tl {
    position absolute
    top 0
    left 0
}

.fit {
    width 100%
    height 100%
}

.pos-center {
    position absolute

    top 50%
    left 50%

    transform translate3d(-50%, -50%, 0)

}

.color--white {
    color $white
}

.color--black {
    color $black
}
